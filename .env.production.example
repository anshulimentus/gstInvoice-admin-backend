# Production Database Configuration
# Choose database type: 'local' or 'supabase'
DATABASE_TYPE=supabase

# Local Database Configuration (commented out for production)
# DATABASE_URL=postgres://username:password@production-host:5432/postgres

# Supabase Database Configuration (for production)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=your-production-supabase-anon-key

# Environment
NODE_ENV=production

# JWT Secret (Use a strong, unique secret for production)
SECRET_KEY=your_strong_production_secret_key_here

# Blockchain/Web3 Configuration
PROVIDER_URL=https://mainnet.infura.io/v3/your_infura_project_id
PRODUCT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
PRIVATE_KEY=your_production_private_key_here
OWNER_ADDRESS=0x0000000000000000000000000000000000000000
